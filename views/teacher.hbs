<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Имя</th>
      <th scope="col">Отчество</th>
      <th scope="col">Дата рождения</th>
      <th scope="col">Должность</th>
      <th scope="col">Зарплата</th>
      <th scope="col">Номер телефона</th>
      <th scope="col">Стаж</th>
      <th scope="col">Адрес</th>
      <th><a href="/teacher/createTeacher" target="_self" class="nav-link text-light"><i class="fas fa-pen"></i> Добавить</a></th>
    </tr>
  </thead>
  <tbody>
    {{#each teacher}}	
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.Фамилия}}</td>
      <td>{{this.Имя}}</td>
      <td>{{this.Отчество}}</td>
      <td>{{this.Дата_рождения}}</td>
      <td>{{this.Должность}}</td>
      <td>{{this.Зарплата}}</td>
      <td>{{this.Номер_телефона}}</td> 
      <td>{{this.Стаж}}</td>
      <td>{{this.Адрес}}</td>
        <td>
          <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <button type="button" class="btn btn-danger">
              <form action="/teacher/delete/{{this.id}}" method="POST" >
                <input type="submit" value="Удалить" class="btn btn-danger btn-sm" />
              </form>
            </button>{{!-- <i class="fas fa-trash-alt"></i> --}}
            <button type="button" class="btn btn-warning">
              <a href="/teacher/editTeacher/{{this.id}}" class="nav-link text-light">
                <i class="fas fa-edit"></i>
              </a>
            </button> {{!-- <i class="fas fa-edit"></i> --}}
          </div>
        </td>       
    </tr>
    {{/each}}
  </tbody>
</table>

